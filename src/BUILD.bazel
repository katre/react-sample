ts_project(
    name = "welcome_test_lib",
    srcs = ["welcome.test.tsx"],
    declaration = True,
    resolve_json_module = True,
    transpiler = TRANSPILER,
    tsconfig = "//:tsconfig",
    deps = [
        ":welcome",
        "//:node_modules/@testing-library/jest-dom",
        "//:node_modules/@testing-library/react",
