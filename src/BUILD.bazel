js_library(
    name = "src",
    srcs = glob(ASSET_PATTERNS),
    visibility = ["//visibility:public"],
    deps = [
        ":index",
    ],
)

test_suite(
    name = "all_tests",
    tests = [
        ":app_test",
        ":welcome_test",
    ],
)
